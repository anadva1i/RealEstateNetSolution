                                            <select class="selectpicker" data-live-search="true" data-width="100%" name="State">
                                                <option data-tokens="@Model.Property.State">
                                                    @Model.Property.State
                                                </option>
                                                @foreach (var state in Model.StateModels)
                                                {
                                                    if (!state.Equals(@Model.Property.State))
                                                    {
                                                        <option data-tokens="@state">
                                                            @state
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
