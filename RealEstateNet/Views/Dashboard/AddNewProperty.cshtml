                                    <div class="col-lg-6 col-xl-4">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" name="Color" id="flexRadioDefault5">
                                            <label class="custom-control-label" for="flexRadioDefault5">
                                                @Model.Services.Border
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
