                                    <div class="col-lg-12">
                                        <h4 class="mb30">@Model.PageModel.Location</h4>
                                    </div>
                                    <div class="col-lg-12 col-xl-12">
                                        <div class="my_profile_setting_input form-group">
                                            <label for="propertyAddress">@Model.PageModel.AddressGE</label>
                                            <input type="text" class="form-control" id="propertyAddressGE" name="AddressGE" placeholder="Drag map marker to get the address" value="@Model.Property.AddressEN" readonly="true" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-xl-6">
                                        <div class="my_profile_setting_input ui_kit_select_search form-group">
                                            <label>@Model.PageModel.Country</label>
                                            <select class="selectpicker" data-live-search="true" data-width="100%" name="Country">
                                                @foreach (var country in Model.Countries)
                                                {
                                                    <option data-tokens="@country">
                                                        @country
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-xl-6">
                                        <div class="my_profile_setting_input ui_kit_select_search form-group">
                                            <label>@Model.PageModel.City</label>
                                            <select class="selectpicker" data-live-search="true" data-width="100%" name="City">
                                                <option data-tokens="@Model.Property.City">
                                                    @Model.Property.City
                                                </option>
                                                @foreach (var city in Model.Cities)
                                                {
                                                    if (!city.Equals(@Model.Property.City))
                                                    {
                                                        <option data-tokens="@city">
                                                            @city
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
