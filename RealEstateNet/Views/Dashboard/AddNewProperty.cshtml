                                            {
                                                foreach (var picture in Model.Property.pictures)
                                                {
                                                    var count = 1;
                                                    <li id="li-@count" class="list-inline-item">
                                                        <div class="portfolio_item">
                                                            <img class="img-fluid" id="myImg" style="width: 200px; height: 200px; object-fit: cover" src="@picture">
