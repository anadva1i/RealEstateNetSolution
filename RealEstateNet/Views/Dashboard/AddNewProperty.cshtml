                                            <textarea class="form-control" id="propertyDescription" rows="7" name="DescriptionGE">@Model.Property.DescriptionGE</textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="my_profile_setting_textarea">
